{
  "name": "base_app",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "start-test-server": "METEOR_LOCAL_DIR=.meteor/test meteor",
    "test": "BABEL_ENV=COVERAGE COVERAGE=1 COVERAGE_OUT_HTML=1 COVERAGE_VERBOSE=1 COVERAGE_APP_FOLDER=$PWD/ meteor --inspect test --driver-package cultofcoders:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package cultofcoders:mocha",
    "cypress:open": "cypress open",
    "integration-test": "start-server-and-test start-test-server http://localhost:3000 cypress:open",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.3.4",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "apollo-boost": "^0.3.1",
    "apollo-server-express": "^2.4.8",
    "bcrypt": "^3.0.4",
    "formik": "^1.5.1",
    "formik-material-ui": "0.0.16",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.11",
    "meteor-node-stubs": "^0.4.1",
    "react": "^16.8.4",
    "react-apollo": "^2.5.2",
    "react-dom": "^16.8.4",
    "react-flexbox-grid": "^2.1.2",
    "react-router-dom": "^4.3.1",
    "react-router-transition": "^1.3.0",
    "react-spinners": "^0.5.3",
    "react-toastify": "^4.5.2",
    "reactn": "^1.0.0",
    "yup": "^0.26.10"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "apollo-server-testing": "^2.5.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.4",
    "cypress": "^3.3.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-meteor": "^5.1.0",
    "eslint-plugin-react": "^7.12.4",
    "npm-check-updates": "^3.1.8",
    "start-server-and-test": "^1.9.0"
  },
  "babel": {
    "env": {
      "COVERAGE": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
