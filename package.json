{
  "name": "ikan-srs",
  "private": true,
  "scripts": {
    "start": "npm run start-full -- --exclude-archs web.browser.legacy",
    "start-full": "meteor run",
    "start-test-server": "METEOR_LOCAL_DIR=.meteor/test meteor --exclude-archs web.browser.legacy,web.cordova",
    "test": "BABEL_ENV=COVERAGE COVERAGE=1 COVERAGE_OUT_HTML=1 COVERAGE_VERBOSE=1 COVERAGE_APP_FOLDER=$PWD/ meteor --inspect test --driver-package cultofcoders:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package cultofcoders:mocha",
    "cypress:open": "cypress open",
    "integration-test": "start-server-and-test start-test-server http://localhost:3000 cypress:open",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@babel/runtime": "^7.15.4",
    "apollo-server-express": "^3.3.0",
    "bcrypt": "^5.0.1",
    "chart.js": "^3.5.1",
    "chartjs-adapter-date-fns": "^2.0.0",
    "chartjs-react": "^3.3.2",
    "date-fns": "^2.25.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-tag": "^2.12.5",
    "highlight.js": "^11.2.0",
    "lodash": "^4.17.21",
    "markdown-it": "^12.2.0",
    "meteor-node-stubs": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown-editor-lite": "^1.3.1",
    "react-responsive": "^8.2.0",
    "react-router-dom": "^5.3.0",
    "react-toastify": "^8.0.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.4",
    "sift": "^15.0.0",
    "simpl-schema": "^1.12.0",
    "uniforms": "^3.6.1",
    "uniforms-bridge-simple-schema-2": "^3.6.1",
    "uniforms-semantic": "^3.6.1",
    "winston": "^3.3.3"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "apollo-server-testing": "^2.23.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^8.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-meteor": "^7.3.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-check-updates": "^11.8.5",
    "start-server-and-test": "^1.14.0",
    "timekeeper": "^2.2.0"
  },
  "babel": {
    "env": {
      "COVERAGE": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
