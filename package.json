{
  "name": "ikan-srs",
  "private": true,
  "scripts": {
    "start": "npm run start-full -- --exclude-archs web.browser.legacy",
    "start-full": "meteor run",
    "start-test-server": "METEOR_LOCAL_DIR=.meteor/test meteor",
    "test": "BABEL_ENV=COVERAGE COVERAGE=1 COVERAGE_OUT_HTML=1 COVERAGE_VERBOSE=1 COVERAGE_APP_FOLDER=$PWD/ meteor --inspect test --driver-package cultofcoders:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package cultofcoders:mocha",
    "cypress:open": "cypress open",
    "integration-test": "start-server-and-test start-test-server http://localhost:3000 cypress:open",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@apollo/client": "^3.3.13",
    "@babel/runtime": "^7.13.10",
    "apollo-server-express": "^2.22.1",
    "bcrypt": "^5.0.1",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "highlight.js": "^10.7.1",
    "lodash": "^4.17.21",
    "markdown-it": "^12.0.4",
    "meteor-node-stubs": "^1.0.3",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown-editor-lite": "^1.2.4",
    "react-responsive": "^8.2.0",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "sift": "^13.5.0",
    "simpl-schema": "^1.10.2",
    "uniforms": "^3.2.1",
    "uniforms-bridge-simple-schema-2": "^3.2.1",
    "uniforms-semantic": "^3.2.1",
    "winston": "^3.3.3"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "apollo-server-testing": "^2.22.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^6.8.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-meteor": "^7.3.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-check-updates": "^11.3.0",
    "start-server-and-test": "^1.12.1",
    "timekeeper": "^2.2.0"
  },
  "babel": {
    "env": {
      "COVERAGE": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
