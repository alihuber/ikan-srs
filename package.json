{
  "name": "base_app",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "start-test-server": "METEOR_LOCAL_DIR=.meteor/test meteor",
    "test": "BABEL_ENV=COVERAGE COVERAGE=1 COVERAGE_OUT_HTML=1 COVERAGE_VERBOSE=1 COVERAGE_APP_FOLDER=$PWD/ meteor --inspect test --driver-package cultofcoders:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package cultofcoders:mocha",
    "cypress:open": "cypress open",
    "integration-test": "start-server-and-test start-test-server http://localhost:3000 cypress:open",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.4",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "apollo-boost": "^0.4.3",
    "apollo-server-express": "^2.6.9",
    "bcrypt": "^3.0.6",
    "graphql": "^14.4.2",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.14",
    "meteor-node-stubs": "^0.4.1",
    "react": "^16.8.6",
    "react-apollo": "^2.5.8",
    "react-dom": "^16.8.6",
    "react-flexbox-grid": "^2.1.2",
    "react-router-dom": "^4.3.1",
    "react-router-transition": "^1.3.0",
    "react-spinners": "^0.5.8",
    "react-toastify": "^5.3.1",
    "simpl-schema": "^1.5.5",
    "uniforms": "^2.2.0",
    "uniforms-bridge-simple-schema-2": "^2.2.0",
    "uniforms-material": "^2.2.0",
    "winston": "^3.2.1"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "apollo-server-testing": "^2.6.9",
    "babel-eslint": "^10.0.2",
    "babel-plugin-istanbul": "^5.1.4",
    "cypress": "^3.4.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-meteor": "^5.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "npm-check-updates": "^3.1.18",
    "start-server-and-test": "^1.9.1"
  },
  "babel": {
    "env": {
      "COVERAGE": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
